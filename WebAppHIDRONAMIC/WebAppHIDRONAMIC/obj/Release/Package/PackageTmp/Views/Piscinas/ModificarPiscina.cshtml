@model IEnumerable<WebAppHIDRONAMIC.Entities.PiscinaDTO>

@{
    Layout = null;
}

<form id="form-piscinas-m" method="post">
    <!--CAMPOS OCULTOS PARA GRABAR DATOS CLAVE-->
    <input type="hidden" id="PISCINA" name="PISCINA" />

    <input type="hidden" id="CUENTA_COMERCIAL" name="CUENTA_COMERCIAL" value="@ViewBag.cliente" />

    <div class="form-group">
        <label>Cliente:</label>
        <input type="text" class="form-control" disabled="disabled" value="@ViewBag.razon" />
    </div>

    <div class="form-group">
        <label>Tipo de Piscina:</label>
        @Html.DropDownList("TIPO_PISCINA", (SelectList)ViewBag.tiposPiscina, new { @class = "form-control tip" })
    </div>

    <!--FORMULARIO DE REGISTRO O MODIFICACION DE PISCINA-->
    <div class="form-group">
        <label>Frecuencia Mant. :</label>
        @Html.DropDownList("FRECUENCIA", (SelectList)ViewBag.frecuenciaMant, new { @class = "form-control fre" })
    </div>

    <div class="form-group">
        <label>Ubicación:</label>
        <input type="text" class="form-control ubi" placeholder="Ubicación de piscina" id="UBICACION" name="UBICACION" />
    </div>

    <div class="form-group">
        <label>Largo:</label>
        <input type="number" class="form-control lar" placeholder="Largo de piscina" id="LARGO" name="LARGO" step=".2" />
    </div>

    <div class="form-group">
        <label>Ancho:</label>
        <input type="number" class="form-control anc" placeholder="Ancho de piscina" id="ANCHO" name="ANCHO" step=".2" />
    </div>

    <div class="form-group">
        <label>Profundidad:</label>
        <input type="number" class="form-control pro" placeholder="Profundidad de piscina" id="PROFUNDIDAD" name="PROFUNDIDAD" step=".2" />
    </div>

    @*<div class="form-group">
            <label>Volumen:</label>
            <input type="number" class="form-control vol" placeholder="Volumen de piscina" id="VOLUMEN" name="VOLUMEN" step=".2" />
        </div>*@

    <div align="center" class="form-group">
        <label class="form-inline" style="width:100px;">
            <button type="button" class="btn btn-default" id="btnNuevo" aria-label="Left Align" onclick="NuevaPisc();">
                <img src="~/Imagenes/add_icon.png" /> Nuevo
            </button>
        </label>
        <label class="form-inline" style="width:100px;">
            <button type="button" class="btn btn-success" id="btnModifica" style="display:none;" onclick="ModificarPiscinaBD();">
                <strong>MODIFICAR</strong>
            </button>
            <button type="button" class="btn btn-success" style="display:block;" id="btnAgrega" onclick="AgregarPiscinaBD();">
                <strong>AGREGAR</strong>
            </button>
        </label>
    </div>
</form>

<!--LISTA DE PISCINAS-->
<div class="table-responsive table-bordered">
    <table class="table" id="piscinasTable">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Frecuencia</th>
                <th>Ubicación</th>
                <th>L</th>
                <th>A</th>
                <th>Prof.</th>
                <th>Vol.</th>
                @*th style="text-align:center;">Modificar</th>
                    <th style="text-align:center;">Eliminar</th>*@
            </tr>
        </thead>
        <tbody id="piscinasModificadas">
            @foreach (var item in Model)
            {
                <input type="hidden" value="@item.CUENTA_COMERCIAL" id="CLIENTE" />
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TIPO_PISCINA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FRECUENCIA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UBICACION)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LARGO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ANCHO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PROFUNDIDAD)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VOLUMEN)
                    </td>
                    @*<td style="text-align:center;">
                            <a href="#" onclick="Piscina('@item.PISCINA');"><img src="~/Imagenes/edit.png" /></a>
                        </td>
                        <td style="text-align:center;">
                            <a href="#" onclick="ElimPiscinaBD('@item.PISCINA', '@item.CUENTA_COMERCIAL');"><img src="~/Imagenes/delete_icon.png" /></a>
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>

