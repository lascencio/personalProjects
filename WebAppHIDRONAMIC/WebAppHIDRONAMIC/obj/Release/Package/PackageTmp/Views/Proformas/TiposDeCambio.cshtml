@{
    Layout = null;
}

<style>
    #detallesTable tr th {
        background-color: #fff;
    }
</style>

<!--BLOQUE DE MENSAJES DE RESULTADOS-->
<div class="alert alert-danger alert-dismissible" style="display:none" id="MENSAJE_W">
    <a href="#" class="close" data-dismiss="alert"></a>
    <span class="message_w"></span>
</div>

<div class="alert alert-success alert-dismissible" style="display:none" id="MENSAJE_S">
    <a href="#" class="close" data-dismiss="alert"></a>
    <span class="message_s"></span>
</div>

<div class="row form-inline" style="padding-left:15px;padding-bottom:15px;">
    <div class="form-group" style="width:95px;">
        <label>Año:</label>
        <select class="form-control fechas" id="EJERCICIO" style="width:85px;">
            <option value="2015">2015</option>
            <option value="2016">2016</option>
            <option value="2017">2017</option>
            <option value="2018">2018</option>
        </select>
    </div>
    <div class="form-group" style="width:155px;">
        <label>Mes:</label>
        <select class="form-control fechas" id="MES" style="width:145px;">
            @*            <select class="form-control fechas" id="MES" onchange="Consultar('0', '0', '0');" style="width:145px;">*@
            <option value="01" selected>ENERO</option>
            <option value="02">FEBRERO</option>
            <option value="03">MARZO</option>
            <option value="04">ABRIL</option>
            <option value="05">MAYO</option>
            <option value="06">JUNIO</option>
            <option value="07">JULIO</option>
            <option value="08">AGOSTO</option>
            <option value="09">SEPTIEMBRE</option>
            <option value="10">OCTUBRE</option>
            <option value="11">NOVIEMBRE</option>
            <option value="12">DICIEMBRE</option>
        </select>
    </div>
    <div class="form-group" style="width:78px;">
        <label>Día:</label>
        <select class="form-control" id="dias" style="width:65px;"></select>
    </div>
    <div class="form-group" style="width:50px;">
        <label style="color:white;">Hola</label>
        <a class="btn btn-default" onclick="nuevo();">
            <img src="~/Imagenes/add_icon.png" />
        </a>
    </div>

    <div class="row form-inline" style="padding-left:15px;padding-bottom:15px;">
        <input type="hidden" id="tipo" value="REG">
        <div class="form-group" style="width:110px;">
            <label>Compra:</label>
            <input type="number" id="compra" class="form-control" placeholder="0.00" style="width:100px;" onkeyup="calcularPromedio()">
        </div>
        <div class="form-group" style="width:110px;">
            <label>Venta:</label>
            <input type="number" id="venta" class="form-control" placeholder="0.00" style="width:100px;" onkeyup="calcularPromedio()">
        </div>
        <div class="form-group" style="width:110px;">
            <label>Promedio:</label>
            <input type="text" id="promedio" class="form-control" placeholder="0.00" style="width:100px;" disabled="disabled">
        </div>
        <div class="form-group" style="width:70px;">
            <label style="color:white;">Hola</label>
            <a class="btn btn-default" onclick="Grabar();">
                <img src="~/Imagenes/save.png" />
            </a>
        </div>
    </div>
</div>


<div class="table-responsive table-bordered">
    <table class="table table-striped table-bordered" id="detallesTable">
        <thead>
            <tr>
                <th style="width:10%;">Día</th>
                <th style="text-align:right;width:25%;">Compra</th>
                <th style="text-align:right;width:25%;">Venta</th>
                <th style="text-align:right;width:25%;">Promedio</th>
                <th style="text-align:center;width:15%;">Modificar</th>
            </tr>
        </thead>
        <tbody id="CambiosDet" class="content"></tbody>
    </table>
</div>

<script src="~/Scripts/ScrTiposCambio.js"></script>
