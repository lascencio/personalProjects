@model WebAppHIDRONAMIC.Entities.ClienteDTO

@{
    Layout = null;
}

<!--FORMULARIO DE MODIFICACIÓN-->
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    <label>Tipo de Documento:</label>
    @Html.DropDownList("TIPO_DOCUMENTO", (SelectList)ViewBag.documentos, new { @class = "form-control tipdoc" })
</div>

@Html.EditorFor(model => model.CUENTA_COMERCIAL, new { htmlAttributes = new { @class = "form-control cuentc", @type = "hidden" } })

<div class="form-group">
    <label>Número de Documento:</label>
    @Html.EditorFor(model => model.NRO_DOCUMENTO, new { htmlAttributes = new { @class = "form-control numdoc", @required = "required", @type = "number" } })
    @Html.ValidationMessageFor(model => model.NRO_DOCUMENTO, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Nombre o Razón Social:</label>
    @Html.EditorFor(model => model.ALIAS, new { htmlAttributes = new { @class = "form-control nomraz", @required = "required" } })
</div>

<div class="form-group">
    <label>Dirección Exacta:</label>
    @Html.EditorFor(model => model.DOMICILIO, new { htmlAttributes = new { @class = "form-control direxac", @required = "required" } })
</div>

<div class="form-group">
    <label>Teléfono:</label>
    @Html.EditorFor(model => model.TELEFONO, new { htmlAttributes = new { @class = "form-control telefo" } })
    @Html.ValidationMessageFor(model => model.TELEFONO, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Celular:</label>
    @Html.EditorFor(model => model.CELULAR, new { htmlAttributes = new { @class = "form-control celula" } })
    @Html.ValidationMessageFor(model => model.CELULAR, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Correo Electrónico:</label>
    @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control correo", @required = "required" } })
    @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Departamento:</label>
    @Html.DropDownList("DEPARTAMENTO", (SelectList)ViewBag.departamentos, new { @class = "form-control depa_m", @onchange = "Departamentos('M');" })
</div>

<div class="form-group">
    <label>Provincia:</label>
    @Html.DropDownList("PROVINCIA", (SelectList)ViewBag.provincias, new { @class = "form-control prov_m", @onchange = "Provincias('M');" })
</div>

<div class="form-group">
    <label>Distrito:</label>
    @Html.DropDownList("DISTRITO", (SelectList)ViewBag.distritos, new { @class = "form-control dist_m" })
</div>

<br />

<div align="center" class="form-group">
    <a onclick="Modificar();" id="btnModCliente">
        <button type="button" class="btn btn-success btn-lg"><strong>MODIFICAR</strong></button>
    </a>
</div>

